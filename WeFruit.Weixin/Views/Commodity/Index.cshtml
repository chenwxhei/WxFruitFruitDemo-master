@model WeFruit.Weixin.Models.HomeViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutMaster.cshtml";
}

@section Style
{
    <link href="~/Content/css/index.css" type="text/css" rel="stylesheet">
    <link href="~/Content/css/swiper.min.css" type="text/css" rel="stylesheet">
}

<!--ftop开始-->
<div class="ftop">
    <div class="index_search index_search01" style="padding-left: 10px;">
        <div style="left: 0px; width: 100%;" onclick="document.location = 'search.html'">
            <input type="text" placeholder="请输入您要搜索的产品">
            <input type="button" value="">
        </div>
    </div>
    <div style="clear: both;"></div>
</div>
<!--ftop开始-->
<div class="search_list">
    <ul>
        @foreach (var product in Model.Products)
        {
            <li>
                <a href="@Url.Action("Index","Prodetail",new {product.Code})">
                    <img src="@product.ProPhotoes.First().ImgUrl">
                    <div class="search_item">
                        <p>@product.Name</p>
                        <h2>
                            <i>￥</i><b>@product.SellPrice</b><span>月销18252笔</span>
                        </h2>
                    </div>
                </a>
            </li>
        }
    </ul>
</div>

@section Scrpit
{
    <script src="~/Scripts/swiper.min.js" type="text/javascript"></script>
    <script src="~/Scripts/index.js" type="text/javascript"></script>

    <script>
        $(".search_list ul li a img").each(function() {
            var w = $(this).width();
            $(this).height(w + "px");
        })

    </script>

}