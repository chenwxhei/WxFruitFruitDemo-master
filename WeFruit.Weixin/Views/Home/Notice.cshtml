@model WeFruit.Weixin.Models.HomeViewModel
@{
    ViewBag.Title = "最新公告";
    Layout = "~/Views/_LayoutMaster.cshtml";
}

@section Style
{
    <link href="~/Content/Css/index.css" rel="stylesheet" />
}

<!--ftop开始-->
<div class="ftop">
    <a class="back" onClick="javascript:history.back(-1);"><img src="/Content/Images/icon_03.png"></a>
    <h2>@ViewBag.Title</h2>
    <a class="comea">&nbsp;</a>
    <div style="clear: both;"></div>
</div>
<!--ftop开始-->
<div class="notice">
    <ul>
        @foreach (var notice in Model.Notices)
        {

            <li>
                <a href="@Url.Action("Notice_xq","Home",new {notice.Id})">
                    <h2>
                        <span>@notice.Body</span><i>@notice.ModiTime.Value.ToString("yyyy-MM-dd")</i>
                    </h2>
                    <p>@notice.Contents</p>
                </a>
            </li>
        }
    </ul>
</div>

