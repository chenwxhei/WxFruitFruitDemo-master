@model WeFruit.Weixin.Models.HomeViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutMaster.cshtml";
}

@section Style
{

}

<!--ftop开始-->
<!--ftop开始-->
<div class="ftop">
    <div class="index_search index_search01">
        <a class="back" onClick="javascript:history.back(-1);"><img src="~/Content/Images/icon_03.png"></a>
        <div>
            <input type="text" placeholder="请输入您要搜索的产品">
            <input class="dw" onclick="document.location='search_list.html'" type="button" value=" ">
        </div>
    </div>
    <div style="clear: both;"></div>
</div>
<!--ftop开始--> 
<!--ftop开始-->
<div class="search_list">
    <ul>
        @foreach (var product in Model.Products)
        {
            <li>
                <a href="@Url.Action("Index","Product",new {product.Code})">
                    <img src="@product.ProPhotoes.First().ImgUrl">
                    <div class="search_item">
                        <p>@product.Name</p>
                        <h2>
                            <i>￥</i><b>@product.SellPrice</b><span>月销18252笔</span>
                        </h2>
                    </div>
                </a>
            </li>
        }
    </ul>
</div>

@section Scrpit
{
    <script>
        $(".search_list ul li a img").each(function() {
            var w = $(this).width();
            $(this).height(w + "px");
        })

    </script>

}
